<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textColorPrimary">#ffffffff</item>
    </style>
    
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Gets rid of the search icon -->
        <item name="searchIcon">@drawable/ic_search</item>
        <!-- Gets rid of the "underline" in the text -->
        <item name="queryBackground">@color/colorText</item>
        <!-- Query Text Color -->
        <item name="android:textColor">@color/colorText</item>
        <!-- Hint Color -->
        <item name="colorPrimary">@color/colorText</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/colorText</item>
    </style>

    <style name="NavigationView">
        <item name="android:textColorSecondary">@color/colorItemDrawer</item>
        <item name="itemTextColor">@color/menu_drawable_selector</item>
        <item name="itemIconTint">@color/menu_drawable_selector</item>
    </style>



</resources>